n = len(nums)
        
        min_index = nums.index(min(nums))
        max_index = nums.index(max(nums))
        
        left = min(min_index, max_index)
        right = max(min_index, max_index)
        
        # Three possibilities
        delete_front = right + 1
        delete_back = n - left
        delete_both = (left + 1) + (n - right)
        
        return min(delete_front, delete_back, delete_both)
